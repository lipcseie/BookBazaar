@model Product

<form method="post">

    <div class="border p-3 my-4">
        <div class="row pb-2 bg-p">
            <h2 class="lead text-primary ">CREATE CATEGORY</h2>
            <hr/>
        </div>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 row p-1">
        <label asp-for="Title"  class="p-0"></label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Description" class="p-0"></label>
         <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Description" class="p-0"></label>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="ISBN" class="p-0"></label>
        <input asp-for="ISBN" type="text" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
     </div>
    <div class="mb-3 row p-1">
        <label asp-for="Author" class="p-0"></label>
        <input asp-for="Author" type="text" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
     </div>
    <div class="mb-3 row p-1">
        <label asp-for="ListPrice" class="p-0"></label>
        <input asp-for="ListPrice" type="text" class="form-control" />
         <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price" class="p-0"></label>
        <input asp-for="Price" type="text" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
         <label asp-for="Price50" class="p-0"></label>
         <input asp-for="Price50" type="text" class="form-control" />
         <span asp-validation-for="Price50" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
         <label asp-for="Price100" class="p-0"></label>
         <input asp-for="Price100" type="text" class="form-control" />
         <span asp-validation-for="Price100" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">CREATE</button>
        </div>
        <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary bprder form-control"> BACK TO LIST</a>
        </div>
    </div>
    
       
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}